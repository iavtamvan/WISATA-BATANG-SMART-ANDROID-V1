<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icUserProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_batang"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="3dp">

            <TextView
                android:id="@+id/listJudulJKeluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Judul Keluhan"
                android:textColor="@color/hijau"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contenKeluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Content Keluhan"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/ivKeluhan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@android:drawable/ic_menu_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivLike"
                    android:src="@drawable/like"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivLikeSukses"
                    android:visibility="gone"
                    android:src="@drawable/like_sukses"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tvTotalLike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center|left"
                    android:text="200 Like"
                    android:layout_marginRight="8dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivdisLike"
                    android:src="@drawable/dislike"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:id="@+id/ivdisLikeSukses"
                    android:src="@drawable/dislike_sukses"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tvTotalDisLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center|left"
                    android:text="200 Like"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>